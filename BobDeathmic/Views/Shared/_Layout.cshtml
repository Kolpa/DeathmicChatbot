<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BobDeathmic</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/FontAwesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navi.css" />
    <link rel="stylesheet" href="~/css/paddings.css" />
    <link rel="stylesheet" href="~/css/margins.css" />
    <link rel="stylesheet" href="~/css/settings.css" />
    <link rel="stylesheet" href="~/css/typography.css" />


</head>
<body>
    <div class="container-fluid">
        <div class="row pt-10 pb-10 bg_dark">
            <div class="col-12 col-md-1">
                <a asp-area="" asp-controller="Main" asp-action="Index"><img src="~/images/BobDeathmicLogo.png" class="logo" /></a>

                <span class="mobile_nav_opener d-block d-md-none">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </div>
            <div class="col-12 col-md-2 offset-md-9" style="text-align:left;">
                @await Html.PartialAsync("_LoginPartial")
                @await Html.PartialAsync("_LogoutPartial")
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-4 col-lg-2 bg_dark navi">
                <div class="mobile_overflowcontainer">
                    <div class="navigationcontainer relative">
                        <a href="~/Datenschutz.html" style="position:absolute;left:0;bottom:0;">Datenschutz</a>
                        <!-- TODO: on Production can just Check for User current Seed does not asign everyone the User Role  -->

                        @if (User.IsInRole("User") || User.IsInRole("Admin") || User.IsInRole("Dev"))
                        {
                            <div class="menu">
                                <div class="menuitem">
                                    <span class="submenuopener">Streams<i class="fa fa-chevron-down"></i></span>
                                    <div class="submenu">
                                        <div class="heightgiver">
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="Stream" asp-action="Status">Status</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="Stream" asp-action="Verwaltung">Verwaltung</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="Stream" asp-action="Create"><i class="fa fa-plus"></i> Hinzufügen</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="StreamCommands" asp-action="Index">Commands</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="menuitem">
                                    <span class="submenuopener">GiveAway<i class="fa fa-chevron-down"></i></span>
                                    <div class="submenu">
                                        <div class="heightgiver">
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="GiveAway" asp-action="Index">Meine Geschenke</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="GiveAway" asp-action="Winnings">Gewonne Geschenke</a>
                                            </div>
                                            @if (User.IsInRole("Dev") || User.IsInRole("Admin"))
                                            {
                                                <div class="menuitem">
                                                    <a asp-area="" asp-controller="GiveAway" asp-action="Admin">Admin</a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="menuitem">
                                    <a asp-area="" asp-controller="Services" asp-action="ServiceControls">Dienste</a>
                                </div>
                                @if (User.IsInRole("Dev") || User.IsInRole("Admin"))
                                {
                                    <div class="menuitem">
                                        <span class="submenuopener">Admin<i class="fa fa-chevron-down"></i></span>
                                        <div class="submenu">
                                            <div class="heightgiver">
                                                @if (User.IsInRole("Dev"))
                                                {
                                                    <div class="menuitem">

                                                        <a asp-area="" asp-controller="Admin" asp-action="Import">Import</a>

                                                    </div>
                                                    <div class="menuitem">
                                                        <a asp-area="" asp-controller="Admin" asp-action="SecurityTokens">Tokens</a>
                                                    </div>
                                                    <div class="menuitem">
                                                        <a asp-area="" asp-controller="UserAdmin" asp-action="Index">User Manager</a>
                                                    </div>
                                                }
                                                <div class="menuitem">
                                                    <a asp-area="" asp-controller="DiscordBans" asp-action="Index">Discord Bans</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="menuitem">
                                    <span class="submenuopener">Benutzer <i class="fa fa-chevron-down"></i></span>
                                    <div class="submenu">
                                        <div class="heightgiver">
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="User" asp-action="Subscriptions">Subscriptions</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="User" asp-action="ChangePassword">Passwort ändern</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="User" asp-action="DeleteUser">Nutzer löschen</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="menuitem">
                                    <span class="submenuopener">P&P <i class="fa fa-chevron-down"></i></span>
                                    <div class="submenu">
                                        <div class="heightgiver">
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="Events" asp-action="Index">Event Kalendar</a>
                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="Character" asp-action="Index">Character Rollen</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="navi_footer">

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-8 col-lg-10 pa-0">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/responsivetables.js" asp-append-version="true"></script>
    <script src="~/js/jquery.validate.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
