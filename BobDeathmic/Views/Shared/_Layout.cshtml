<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BobDeathmic</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/FontAwesome/css/all.css" />
    
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-4 col-md-3 col-lg-2 bg_black">
                <div class="navigationcontainer relative">
                    <div class="row">
                        <div class="col-md-12 col-10 text-center">
                            <h1>Bob&shy;Deathmic</h1>
                        </div>
                        @if (User.IsInRole("User"))
                        {
                            <div class="col-2 d-block d-md-none relative">
                                <span class="mobile_nav_opener">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </span>
                            </div>
                        }

                    </div>
                    <!-- TODO: on Production can just Check for User current Seed does not asign everyone the User Role  -->
                    @await Html.PartialAsync("_LoginPartial")
                    @if (User.IsInRole("User") || User.IsInRole("Admin") || User.IsInRole("Dev"))
                    {
                    <div class="menu">
                        <div class="menuitem">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </div>
                        @if (User.IsInRole("Dev") || User.IsInRole("Admin"))
                        {
                            <div class="menuitem">
                                <span class="submenuopener">Admin</span>
                                <div class="submenu">
                                    <div class="heightgiver">
                                        @if (User.IsInRole("Dev"))
                                        {
                                            <div class="menuitem">

                                                <a asp-area="" asp-controller="Admin" asp-action="Import">Import</a>

                                            </div>
                                            <div class="menuitem">
                                                <a asp-area="" asp-controller="Admin" asp-action="SecurityTokens">Tokens</a>
                                            </div>
                                        }

                                        <div class="menuitem">
                                            <a href="#">Platzhalter</a>
                                        </div>
                                        <div class="menuitem">
                                            <a href="#">Platzhalter</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="menuitem">
                            <span class="submenuopener">Benutzer</span>
                            <div class="submenu">
                                <div class="heightgiver">
                                    <div class="menuitem">
                                        <a asp-area="" asp-controller="User" asp-action="Subscriptions">Subscriptions</a>
                                    </div>
                                    <div class="menuitem">
                                        <a asp-area="" asp-controller="User" asp-action="ChangePassword">Passwort ändern</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="menuitem">
                            <span class="submenuopener">Stream</span>
                            <div class="submenu">
                                <div class="heightgiver">
                                    <div class="menuitem">
                                        <a asp-area="" asp-controller="Streams" asp-action="Index">StreamList</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    <div class="navi_footer">
                        @await Html.PartialAsync("_LogoutPartial")
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-8 col-md-9 col-lg-10">
                @RenderBody()
            </div>
        </div>
    </div>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
