@using Microsoft.AspNetCore.Identity
@using BobDeathmic.Models

@inject SignInManager<ChatUserModel> SignInManager
@inject UserManager<ChatUserModel> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Main" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <span>Eingeloggt als @UserManager.GetUserName(User)</span>
        <button alt="ausloggen" type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fas fa-power-off"></i></button>
    </form>
}
