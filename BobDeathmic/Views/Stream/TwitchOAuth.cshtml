@model BobDeathmic.Models.StreamViewModels.StreamOAuthDataModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/forms.css" />
<link rel="stylesheet" href="~/css/Buttons.css" />

<div class="breadcrumbs">
    <span>Streams > Verwaltung > TwitchOAuth</span>
</div>
@Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="pa-35">
    <h2>OAuth</h2>

    <h4>Stream</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <p>RedirectURL: @Model.RedirectLinkForTwitch</p>
            <form asp-controller="Stream" asp-action="TwitchOAuth">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ClientId" class="control-label"></label>
                    <input asp-for="ClientId" class="form-control" />
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Secret" class="control-label"></label>
                    <input asp-for="Secret" class="form-control" />
                    <span asp-validation-for="Secret" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Authorize" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn" asp-action="Index">Back to List</a>
    </div>
</div>