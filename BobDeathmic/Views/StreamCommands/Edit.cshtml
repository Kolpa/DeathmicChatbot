@model BobDeathmic.Models.StreamCommand

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <span>Streams > Commands > Edit</span>
</div>
<div class="pa-35">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="response" class="control-label"></label>
                    <input asp-for="response" class="form-control" />
                    <span asp-validation-for="response" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mode" class="control-label"></label>
                    <select asp-for="Mode" class="form-control"></select>
                    <span asp-validation-for="Mode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AutoInverval" class="control-label"></label>
                    <input asp-for="AutoInverval" class="form-control" />
                    <span asp-validation-for="AutoInverval" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
            ToggleAutoInterval(jQuery("#Mode").find(":selected").val());
            jQuery("#Mode").on("change", function () {
                ToggleAutoInterval(jQuery(this).find(":selected").val());
            })
            function ToggleAutoInterval(state) {
                switch(state)
                {
                    case "Auto":
                        jQuery(".autointervalctn").show();
                    break;
                    case "Manual":
                        jQuery(".autointervalctn").hide();
                    break;

                }

            }
    </script>

}