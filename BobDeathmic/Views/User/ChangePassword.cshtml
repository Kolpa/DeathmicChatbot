@model BobDeathmic.Models.User.ChangePasswordViewModel
@{
    ViewData["Title"] = "Passwort ändern";
}
<link rel="stylesheet" href="~/css/forms.css" />
<div class="pa-35">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="User" asp-action="ChangePassword" method="post" class="form-horizontal">
        <h4>Change Password Form</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="">
                <button type="submit" class="btn btn-default">Change password</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}